{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run EVOLVE Extension",
      "type": "extensionHost",
      "request": "launch",
      "preLaunchTask": "build-editor",
      "runtimeExecutable": "${execPath}",
      "args": [
        "--extensionDevelopmentPath=${workspaceFolder}/editor"
      ],
      "env": {
        "PNETS_DAP_WAIT_FOR_ATTACH": "1"
      },
      "outFiles": [
        "${workspaceFolder}/editor/dist/**/*.js"
      ]
    },
    {
      "name": "Attach to YAML Language Server",
      "type": "node",
      "request": "attach",
      "port": 6009,
      "restart": false,
      "localRoot": "${workspaceFolder}/evolvels",
      "remoteRoot": null
    },    {
      "name": "Attach to pnets_dap (gdb)",
      "type": "cppdbg",
      "request": "attach",
      "program": "${workspaceFolder}/engine/target/debug/pnets_dap",
      "processId": "${command:pickProcess}",
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "linux": {
        "MIMode": "gdb"
      }
    },
    {
      "name": "Attach to pnets_dap (lldb)",
      "type": "lldb",
      "request": "attach",
      "pid": "${command:pickProcess}",
      "program": "${workspaceFolder}/engine/target/debug/pnets_dap",
      "stopOnEntry": false,
      "sourceLanguages": ["rust"]
    },    {
      "name": "Attach to EVOLVE LSP Server",
      "type": "node",
      "request": "attach",
      "port": 6010,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": null,
      "outFiles": [
        "${workspaceFolder}/evolvels/dist/**/*.js"
      ]
    }
  ],
  "compounds": [
    {
      "name": "Extension + YAML LS",
      "configurations": [
        "Run EVOLVE Extension",
        "Run YAML Language Server"
      ]
    },
    {
      "name": "Extension + Attach LSP Servers",
      "configurations": [
        "Run EVOLVE Extension",
        "Attach to EVOLVE LSP Server",
        "Attach to YAML Language Server"
      ]
    }
  ]
}